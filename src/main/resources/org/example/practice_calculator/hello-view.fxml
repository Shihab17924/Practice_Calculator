<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.practice_calculator.CalculatorController"
            prefHeight="300.0"
            prefWidth="400.0">
    <children>
        <TextField fx:id="textDisplay" layoutX="1.0" layoutY="-1.0"
                   prefHeight="50.0"
                   prefWidth="400.0" />
        <GridPane layoutX="7.0" layoutY="50.0" prefHeight="236.0" prefWidth="480.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handlerClearAction" prefHeight="50.0" prefWidth="60.0" text="AC" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button mnemonicParsing="false" onAction="#handlerActionOperation" prefHeight="50.0" prefWidth="60.0" text="/" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Button mnemonicParsing="false" onAction="#handlerActionOperation" prefHeight="50.0" prefWidth="60.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="7" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#handlerActionOperation" prefHeight="50.0" prefWidth="60.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="4" GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#handlerActionOperation" prefHeight="50.0" prefWidth="60.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="1" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Button mnemonicParsing="false" onAction="#handlerEqualeAction" prefHeight="50.0" prefWidth="60.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                <Button mnemonicParsing="false" onAction="#handlerDecimalAction" prefHeight="50.0" prefWidth="60.0" text="." GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <Button mnemonicParsing="false" onAction="#handlerDigitAction" prefHeight="50.0" prefWidth="60.0" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
